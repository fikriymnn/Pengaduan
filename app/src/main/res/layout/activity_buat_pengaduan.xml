<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="16dp">

        <!-- Header Info -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Formulir Pengaduan Masyarakat"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sampaikan keluhan atau laporkan kejadian dengan lengkap dan jelas. Semua laporan akan ditindaklanjuti oleh petugas yang berwenang."
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Form Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Jenis Pengaduan -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Pengaduan *"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/rg_jenis_pengaduan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/rb_kejahatan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kejahatan (Pencurian, Perampokan, dll)"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <RadioButton
                        android:id="@+id/rb_umum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Keluhan Umum (Kebisingan, Parkir Liar, dll)"
                        android:textSize="14sp" />

                </RadioGroup>

                <!-- Kategori (Only for Umum) -->
                <LinearLayout
                    android:id="@+id/layout_kategori"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kategori Pengaduan *"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/spinner_kategori"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/spinner_background"
                        android:paddingHorizontal="12dp" />

                </LinearLayout>

                <!-- Judul Pengaduan -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="100">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_judul"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Judul Pengaduan *"
                        android:inputType="textCapSentences"
                        android:maxLength="100"
                        android:maxLines="2" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Deskripsi -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="500">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_deskripsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Deskripsi Lengkap Kejadian *"
                        android:inputType="textCapSentences|textMultiLine"
                        android:minLines="4"
                        android:maxLines="8"
                        android:maxLength="500"
                        android:gravity="top" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Lokasi -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_lokasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Lokasi Kejadian *"
                        android:inputType="textCapSentences"
                        android:maxLines="3" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Info Fields -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/primary_light"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡ Tips untuk Pengaduan yang Efektif:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_dark"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Berikan judul yang jelas dan spesifik\nâ€¢ Jelaskan kronologi kejadian secara detail\nâ€¢ Sebutkan waktu dan lokasi yang tepat\nâ€¢ Sertakan informasi saksi jika ada\nâ€¢ Gunakan bahasa yang sopan dan objektif"
                        android:textSize="12sp"
                        android:textColor="@color/primary_dark"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

                <!-- Required Fields Info -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* Wajib diisi"
                    android:textSize="12sp"
                    android:textColor="@color/accent_color"
                    android:textStyle="italic"
                    android:layout_marginBottom="24dp" />

                <!-- Submit Button -->
                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="KIRIM PENGADUAN"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_primary"
                    android:textColor="@android:color/white"
                    android:elevation="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Footer Info -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â„¹ï¸ Informasi Penting"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Pengaduan akan diproses dalam 1x24 jam\nâ€¢ Status pengaduan dapat dipantau di menu Riwayat\nâ€¢ Untuk kejadian darurat, hubungi 110 atau 112\nâ€¢ Data pribadi Anda dijamin kerahasiaannya"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>